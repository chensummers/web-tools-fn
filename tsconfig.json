{
    "compilerOptions": {
        "target": "es6",
        "module": "NodeNext",
        "strict": true,
        "esModuleInterop": true,
        "outDir": "./dist",
        "rootDir": "./src",
        "noEmit": false,
        "declaration": false,
        "emitDeclarationOnly": false,
        "moduleResolution": "nodenext",
        "allowImportingTsExtensions": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "baseUrl": "./src",
        "paths": {
            "@/*": ["*"]
        }
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}